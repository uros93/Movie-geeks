<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="well">
      <h3>Edit Profile</h3>
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.label :avatar %>
          <br>
          <%= render 'shared/avatar', user: @user %>
          <br>
          <br>
          <%= f.file_field :avatar %>
        </div>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Full Name', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :about %>
          <%= f.text_area :about, placeholder: 'About', class: 'form-control' %>
        </div>
        
        <div class="actions">
          <%= submit_tag 'Update', class: 'btn btn-primary' %>
        </div>
        <% if @user.provider != nil %>
        <div class="actions">
          <%= link_to 'Import movies from facebook', facebook_movies_index_path, class: 'btn btn-default' %>
        </div>
        <% end %>
        
      <% end %>
    </div>
  </div>
</div>
